{
    "name": "oleksii-s/cir",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Oleksii Semko",
            "role": "maintainer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "drupal/entity",
                "version": "0.1.1",
                "type": "drupal-module",
                "require": {
                    "drupal/core": "~8.3"
                },
                "source": {
                    "url": "git://git.drupal.org/project/entity.git",
                    "type": "git",
                    "reference": "tags/8.x-1.0-alpha4"
                }
            }
        },
        {
            "type"    : "package",
            "package" : {
                "name"    : "harvesthq/chosen",
                "version" : "v1.6.2",
                "type"    : "drupal-library",
                "source"  : {
                    "url"       : "https://github.com/harvesthq/chosen.git",
                    "type"      : "git",
                    "reference" : "origin/master"
                }
            }
        }
    ],
    "require": {
        "php": ">=7.0",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/console": "~1.0",
        "drupal/core": "~8.3",
        "drupal/addtoany": "^1.8",
        "drupal/admin_toolbar": "^1.19",
        "drupal/adminimal_admin_toolbar": "^1.4",
        "drupal/adminimal_theme": "^1.3",
        "drupal/advagg": "^2.4",
        "drupal/chosen": "^2.3",
        "drupal/ctools": "^3.0",
        "drupal/entity": "^0.1.1",
        "drupal/entity_embed": "^1.0@beta",
        "drupal/features": "^3.5",
        "drupal/field_group": "^1.0@rc",
        "drupal/metatag": "^1.1",
        "drupal/pathauto": "^1.0",
        "drupal/scheduler": "^1.0@rc",
        "drupal/similarterms": "^1.3",
        "drupal/simple_fb_connect": "^3.0",
        "drupal/smart_trim": "^1.0",
        "drupal/taxonomy_menu": "^3.3",
        "drush/drush": "~8.1",
        "webflo/drupal-finder": "^0|^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/coder": "^8.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "phpunit/phpunit": ">=4.8.28 <5",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin/",
        "secure-http": false,
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/custom/cir/libraries/{$name}": ["type:drupal-library"],
            "web/profiles/custom/cir/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/profiles/custom/cir/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
